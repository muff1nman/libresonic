<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="schema29_001" author="muff1nman">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">select count(*) from VERSION where VERSION = 5</sqlCheck>
        </preConditions>
        <insert tableName="VERSION">
            <column name="VERSION" valueNumeric="5" />
        </insert>
        <rollback>
            <delete tableName="VERSION" >
                <where>VERSION = 5</where>
            </delete>
        </rollback>
    </changeSet>
    <changeSet id="schema29_002" author="muff1nman">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="USER_RATING" />
            </not>
        </preConditions>
        <createTable tableName="USER_RATING">
            <column name="USERNAME" type="${varchar_type}"/>
            <column name="PATH" type="${varchar_type}" />
            <column name="RATING" type="double" />
        </createTable>
        <addNotNullConstraint tableName="USER_RATING" columnName="USERNAME" columnDataType="${varchar_type}"/>
        <addNotNullConstraint tableName="USER_RATING" columnName="PATH" columnDataType="${varchar_type}"/>
        <addNotNullConstraint tableName="USER_RATING" columnName="RATING" columnDataType="double"/>
        <addPrimaryKey tableName="USER_RATING" columnNames="USERNAME,PATH" />
        <addForeignKeyConstraint baseTableName="USER_RATING"
                                 baseColumnNames="USERNAME"
                                 constraintName="ura_u_fk"
                                 referencedTableName="USER"
                                 referencedColumnNames="USERNAME"
                                 onDelete="CASCADE" />
        <sql>
            insert into "USER_RATING" select 'admin', PATH, RATING from "MUSIC_FILE_INFO"
            where RATING is not null and RATING > 0
        </sql>
        <rollback>
            <dropTable tableName="USER_RATING" />
        </rollback>
    </changeSet>
</databaseChangeLog>
