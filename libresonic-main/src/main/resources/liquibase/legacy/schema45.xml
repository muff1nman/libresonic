<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="schema45_001" author="muff1nman">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">select count(*) from VERSION where VERSION = 18</sqlCheck>
        </preConditions>
        <insert tableName="VERSION">
            <column name="VERSION" valueNumeric="18" />
        </insert>
        <rollback>
            <delete tableName="VERSION" >
                <where>VERSION = 18</where>
            </delete>
        </rollback>
    </changeSet>
    <changeSet id="schema45_002" author="muff1nman">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">select count(*) from ROLE where ID = 11</sqlCheck>
        </preConditions>
        <insert tableName="ROLE">
            <column name="ID" valueNumeric="11"/>
            <column name="NAME" value="share" />
        </insert>
        <sql>
            insert into "USER_ROLE"(USERNAME, ROLE_ID)
            select distinct u.USERNAME, 11 from "USER" u, "USER_ROLE" ur
            where u.USERNAME = ur.USERNAME and ur.ROLE_ID = 1
        </sql>
        <rollback />
    </changeSet>
    <changeSet id="schema45_003" author="muff1nman">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="SHARE" />
            </not>
        </preConditions>
        <createTable tableName="SHARE">
            <column name="ID" type="int"/>
            <column name="NAME" type="${varchar_type}" />
            <column name="DESCRIPTION" type="${varchar_type}" />
            <column name="USERNAME" type="${varchar_type}" />
            <column name="CREATED" type="datetime" />
            <column name="EXPIRES" type="datetime" />
            <column name="LAST_VISITED" type="datetime" />
            <column name="VISIT_COUNT" type="int" defaultValueNumeric="0" />
        </createTable>
        <addNotNullConstraint tableName="SHARE" columnName="ID" columnDataType="int"/>
        <addNotNullConstraint tableName="SHARE" columnName="NAME" columnDataType="${varchar_type}"/>
        <addNotNullConstraint tableName="SHARE" columnName="USERNAME" columnDataType="${varchar_type}"/>
        <addNotNullConstraint tableName="SHARE" columnName="CREATED" columnDataType="datetime"/>
        <addNotNullConstraint tableName="SHARE" columnName="VISIT_COUNT" columnDataType="int"/>
        <addPrimaryKey tableName="SHARE" columnNames="ID" />
        <addAutoIncrement tableName="SHARE" columnName="ID" columnDataType="int"/>
        <createIndex unique="true" tableName="SHARE" indexName="idx_share_name">
            <column name="NAME"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="SHARE"
                                 baseColumnNames="USERNAME"
                                 constraintName="s_u_fk"
                                 referencedTableName="USER"
                                 referencedColumnNames="USERNAME"
                                 onDelete="CASCADE" />
        <sql dbms="hsql">
            set table share type cached
        </sql>
        <createTable tableName="SHARE_FILE">
            <column name="ID" type="int"/>
            <column name="SHARE_ID" type="int"/>
            <column name="PATH" type="${varchar_type}" />
        </createTable>
        <addNotNullConstraint tableName="SHARE_FILE" columnName="ID" columnDataType="int"/>
        <addNotNullConstraint tableName="SHARE_FILE" columnName="SHARE_ID" columnDataType="int"/>
        <addNotNullConstraint tableName="SHARE_FILE" columnName="PATH" columnDataType="${varchar_type}"/>
        <addPrimaryKey tableName="SHARE_FILE" columnNames="ID" />
        <addAutoIncrement tableName="SHARE_FILE" columnName="ID" columnDataType="int" />
        <addForeignKeyConstraint baseTableName="SHARE_FILE"
                                 baseColumnNames="SHARE_ID"
                                 constraintName="sf_s_fk"
                                 referencedTableName="SHARE"
                                 referencedColumnNames="ID"
                                 onDelete="CASCADE" />
        <sql dbms="hsql">
            set table share_file type cached
        </sql>
        <rollback>
            <dropTable tableName="SHARE" />
            <dropTable tableName="SHARE_FILE" />
        </rollback>
    </changeSet>
</databaseChangeLog>
